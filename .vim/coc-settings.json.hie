{
"diagnostic.maxWindowHeight": 20,
"languageserver": {
  "haskell": {
    "command": "hie-wrapper",
    "args": ["--lsp"],
    "trace.server": "verbose",
    "rootPatterns": [
      "*.cabal",
      "stack.yaml",
      "cabal.project",
      "package.yaml"
    ],
    "filetypes": [
      "hs",
      "lhs",
      "haskell"
    ],
    "initializationOptions": {
      "languageServerHaskell": {
      }
    },
    "settings": {
      "languageServerHaskell": {
        "hlintOn": true,
        "maxNumberOfProblems": 10,
        "completionSnippetsOn": true
      }
    }
  }
}
}
